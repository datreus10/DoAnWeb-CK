	<!-- product section -->
	<section class="product-section">
		<div class="container">
			<div class="back-link">
				<a href="./category.html"> &lt;&lt; Back to Category</a>
			</div>
			<div class="row">
				<div class="col-lg-6">
					<div class="product-pic-zoom">
						<img class="product-big-img" src="/api/img/<%= product.img[0] %>?format=png&width=1000&height=1358"
							alt="">
					</div>
					<div class="product-thumbs" tabindex="1" style="overflow: hidden; outline: none;">
						<div class="product-thumbs-track">
							<div class="pt active"
								data-imgbigurl="/api/img/<%= product.img[0] %>?format=png&width=1000&height=1358"><img
									src="/api/img/<%= product.img[0] %>?format=png&width=116&height=116" alt=""></div>

							<% for(let i=1;i<product.img.length;i++) { %>
							<div class="pt"
								data-imgbigurl="/api/img/<%= product.img[i] %>?format=png&width=1000&height=1358"><img
									src="/api/img/<%= product.img[i] %>?format=png&width=116&height=116" alt=""></div>
							<% } %>

						</div>
					</div>
				</div>
				<div class="col-lg-6 product-details">
					<h2 class="p-title"><%= product.name %></h2>
					<h3 class="p-price"><%= product.price %>đ</h3>
					<h4 class="p-stock">Available: <span>In Stock</span></h4>
					<div class="p-rating">
						<i class="fa fa-star-o"></i>
						<i class="fa fa-star-o"></i>
						<i class="fa fa-star-o"></i>
						<i class="fa fa-star-o"></i>
						<i class="fa fa-star-o fa-fade"></i>
					</div>
					<div class="p-review">
						<a href="">3 reviews</a>|<a href="">Add your review</a>
					</div>
					<div class="fw-size-choose">
						<p>Size</p>

						<!-- dung for se bi loi (do mongo model) -->

						<div class="sc-item  <% if(product.sizes.XS==0){ %>disable<% }%>">
							<input type="radio" name="sc" id="xs-size"
								<% if(product.sizes.XS==0){ %>disabled<% } else{ %>checked="" <% } %>>
							<label for="xs-size">XS</label>
						</div>
						<div class="sc-item <% if(product.sizes.S==0){ %>disable<% }%>">
							<input type="radio" name="sc" id="s-size"
								<% if(product.sizes.S==0){ %>disabled<% }else{ %>checked="" <% } %>>
							<label for="s-size">S</label>
						</div>
						<div class="sc-item <% if(product.sizes.M==0){ %>disable<% }%>">
							<input type="radio" name="sc" id="m-size"
								<% if(product.sizes.M==0){ %>disabled<% }else{ %>checked="" <% } %>>
							<label for="m-size">M</label>
						</div>
						<div class="sc-item <% if(product.sizes.L==0){ %>disable<% }%>">
							<input type="radio" name="sc" id="l-size"
								<% if(product.sizes.L==0){ %>disabled<% }else{ %>checked="" <% } %>>
							<label for="l-size">L</label>
						</div>
						<div class="sc-item <% if(product.sizes.XL==0){ %>disable<% }%>">
							<input type="radio" name="sc" id="xl-size"
								<% if(product.sizes.XL==0){ %>disabled<% }else{ %>checked="" <% } %>>
							<label for="xl-size">XL</label>
						</div>

					</div>
					<!-- <div class="quantity">
						<p>Quantity</p>
						<div class="pro-qty"><input type="text" value="1" id="quantity"></div>
					</div> -->
					<a href="#" class="site-btn">Add to cart</a>
					<div id="accordion" class="accordion-area">
						<div class="panel">
							<div class="panel-header" id="headingOne">
								<button class="panel-link active" data-toggle="collapse" data-target="#collapse1"
									aria-expanded="true" aria-controls="collapse1">information</button>
							</div>
							<div id="collapse1" class="collapse show" aria-labelledby="headingOne"
								data-parent="#accordion">
								<div class="panel-body">
									<p><%= product.description %></p>
								</div>
							</div>
						</div>
						<div class="panel">
							<div class="panel-header" id="headingTwo">
								<button class="panel-link" data-toggle="collapse" data-target="#collapse2"
									aria-expanded="false" aria-controls="collapse2">care details </button>
							</div>
							<div id="collapse2" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
								<div class="panel-body">
									<img src="/img/cards.png" alt="">
