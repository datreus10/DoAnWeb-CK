<body>
    <div id="preloder">
        <div class="loader"></div>
    </div>
    <!-- Header section -->
    <%- include('../partial/clientHeader.ejs')%>
    <!-- Header section end -->

<div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card">

                    <div class="card-body">
                        <div class="card-title mb-4">
                            <div class="d-flex justify-content-start">
                                <div class="image-container">
                                    <img src="https://khoanh24.com/uploads/w750/2020/03/23/avatar-facebook-mac-dinh-nam-deo-khau-trang_75cf96b7a.jpg" id="imgProfile" style="width: 150px; height: 150px" class="img-thumbnail" />
                                </div>
                                <div class="userData ml-3 " style="margin: auto;">
                                    <h2 class="d-block" style="font-size: 1.5rem; font-weight: bold"><%= Username%></h2>
                                </div>
                                <div class="ml-auto">
                                    <input type="button" class="btn btn-primary d-none" id="btnDiscard" value="Discard Changes" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" id="connectedServices-tab" data-toggle="tab" href="#connectedServices" role="tab" aria-controls="connectedServices" aria-selected="false">Lịch sử đơn hàng</a>
                                    </li>
                                </ul>
                                    <div class="tab-pane fade show active" id="connectedServices" role="tabpanel" aria-labelledby="ConnectedServices-tab">
                                        <% Bills.forEach(function(Bill) {%>
                                            <% Bill.items.forEach(function(Billitems) {  
                                                var i=1
                                            %>
                                                
                                              <%  Items.forEach(function(Item) { %>
                                                <% if(!Item) { if(i==1) { i=0%>
                                        <table style="width: 100%;">
                                        <tr>
                                        <td colspan="2">
                                                <div class="row">
                                                <div class="col-md-8 col-6">
                                                    <label style="font-weight:bold;">Sản phẩm này không còn bán nữa</label>
                                                   </div> 
                                                </div>
                                        
                                        </td>
                                        </tr>
                                            <%}}else{ %>  
                                                <%      if(Item.id==Billitems.itemId && i==1) { i=0%>
                                            <table style="width: 100%;">
                                        <tr>
                                        <td style="width: 60%;">
                                                <div class="row">
                                                <div class="col-sm-6 col-md-4 col-6">
                                                    <label style="font-weight:bold;">Sản phẩm</label>
                                                </div>
                                                <div class="col-md-8 col-6 col-sm-6">
                                                    <a href="/product/<%=Item._id%>"><%=Item.name%></a>
                                                </div>
                                            </div>
                                        </td>
                                            <td rowspan="4" style="width: 40% ;">
                                            <div class="row">
                                                <img src="<%=Item.fileLinks[0]%>" alt="img" width="150px" height="150px" style="display: flex; margin: 0px 10px 10px 10px;"> 
                                            </div> 
                                        </td> 
                                    </tr>
                                    <tr>
                                        <td style="width: 60%;">
                                           
                                            <div class="row">
                                                <div class="col-sm-6 col-md-4 col-6">
                                                    <label style="font-weight:bold;">Đơn giá</label>
                                                </div>
                                                <div class="col-sm-6 col-md-8 col-6">
                                                    <%=Item.price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %> VNĐ
                                                </div>
                                            </div>
                                        </td>
                                        </tr>
                                            <%}}})%>
                                            <tr>
                                                <td style="width: 60%;">
                                            <div class="row">
                                                <div class="col-sm-6 col-md-4 col-6">
                                                    <label style="font-weight:bold;">Số lượng</label>
                                                </div>
                                                <div class="col-sm-6 col-md-8 col-6">
                                                    <%=Billitems.quantity%>
                                                </div>
                                            </div>
                                        </td></tr>
                                        <tr>
                                                <td style="width: 60%;">
                                            <div class="row">
                                                <div class="col-sm-6 col-md-4 col-6">
                                                    <label style="font-weight:bold;">Size</label>
                                                </div>
                                                <div class="col-sm-6 col-md-8 col-6">
                                                    <%=Billitems.size%>
                                                </div>
                                            </div>
                                        </td></tr>
                                        </table> 
                                            <hr />
                                            <%})%>
                                            
                                            <table style="width: 100%;">
                                        <div class="row">
                                            <tr>
                                                <td style="width: 60%;">
                                                <label style="font-weight:bold;">Tổng tiền</label>
                                                </td>
                                                <td style="width: 40%;">
                                                <label style="font-weight:bold;"><%=Bill.total.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %> VNĐ</label>
                                                </td>
                                            </tr>
                                        </div>
                                        <div class="row">
                                            <tr>
                                            <td style="width: 60%;">
                                            <label style="font-weight:bold;">Trạng thái đơn hàng</label>
                                        </td>
                                        <td style="width: 40%;">
                                            <%if(Bill.isPaid == 1){ %>
                                            <label style="font-weight:bold;">Đã thanh toán</label>
                                            <%}else{%>
                                            <label style="font-weight:bold;">Chưa thanh toán</label>
                                            <%}%>  
                                            
                                    </td>
                                </tr>
                                    </div>
                                    
                                    </table>
                                        <%})%>
                                        <hr/>
                                        <div class="row">
                                            <div class="col-sm-6 col-md-4 col-6">
                                                <a href="/myaccount" class="site-btn">Trở lại</a>
                                            </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>

                </div>
            </div>

        </div>
</div>
</div>
<!-- Footer section -->
        <%- include('../partial/clientFooter.ejs')%>
<!-- Footer section end -->
    
    
    
