            <div class="table-title">
                <div class="row">
                    <div class="col-sm-8"><h2>Danh sách hóa đơn khách hàng<b>: <%= user.name%></b></h2></div>
                    <div class="col-sm-4">
                        <a href="/admin/bill">
                        <button type="button" class="btn btn-info add-new"> Trở vè</button>
                        </a>
                    </div>
                   
                </div>
                <% if(msg != ''){%>
                <div class="row">
              
                    <div class="col-sm-8">
                    <div class="alert alert-danger d-flex align-items-center" role="alert">
                        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
                        <div>
                         <%= msg%>
                        </div>
                      </div>
                    </div>  
               
                </div>
                <%}%>
            </div>
            <table class="table table-bordered">
               
                <thead>
                    <tr>
                        <th>Số hóa đơn</th>
                        <th>Ngày thanh toán</th>
                        <th>Trạng thái</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                   <% if(bills){%>
                    <% bills.forEach(bill=>{%>
                    <tr>

                        <td><%= bill._id%></td>
                        <td><%= bill.dateOrder.toDateString()%></td>
                        <% if(bill.isPaid == 0){%>
                         <td>Đặt hàng thành công</td>
                        <%}else if(bill.isPaid == 1){%>
                         <td>Đang vận chuyển</td>
                        <%}else{%>
                         <td>Đã thanh toán</td>
                        <%}%>
                        <td>
							
                            <a href="/admin/bill/user/editbill/<%= bill.id%>" class="edit" title="Edit" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>
                            <!-- <a class="delete" title="Delete" data-toggle="tooltip"><i class="material-icons">&#xE872;</i></a> -->
                        </td>
                    </tr>
                    <%})}%>
